# Define a dictionary to map category letters to their full names
categories = {'A': 'Directing',
              'B': 'Acting',
              'C': 'Editing',
              'D': 'Writing',
              'E': 'Cinematography',
              'F': 'Sound',
              'G': 'Production',
              'H': 'Entertainment Value',
              'I': 'Relevance',
              'J': 'X-Factor'}

# Define a function to calculate the star rating based on the total score
def calculate_rating(score):
    if score >= 81:
        return '5 stars'
    elif score >= 61:
        return '4 stars'
    else:
        return 'Sorry, not enough stars!'

# Get input from user for each category score
total_score = 0
for letter, category in categories.items():
    score = int(input(f'Please rate {category} (1-10): '))
    total_score += score

# Calculate and output the star rating based on the total score
rating = calculate_rating(total_score)
print(f'Your total score is {total_score}. Your rating is {rating}.')
